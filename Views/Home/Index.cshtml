@{
    ViewData["Title"] = "Index";
}

<h1>Elecciones 2023</h1>

<h2>Partidos</h2>

<div class="contenedorCards">

@foreach (var i in ViewBag.listaPartidos)
    {
    <div class="card">
        <img src='@i.Logo' alt="logo">
        <div class="contenedorTextoCards">
            <p>@i.Nombre</p>
            <div class="contenedorlink">
                <a href='@Url.Action("DetallePartido", new {idPartido=i.IdPartido})'>Mas Informacion</a>
            </div>
        </div>
    </div>
    }
</div>

<div id="contenedoragregar">
<a href='@Url.Action("AgregarPartido")' id="agregar">Agregar partido</a>
</div>